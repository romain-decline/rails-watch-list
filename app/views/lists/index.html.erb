<!-- Image en haut -->
<div class="d-flex justify-content-center" style="height: 300px;">
  <img class="w-100" src="https://d32gva8s8jjsl4.cloudfront.net/img/p/1/1/3/5/9/11359-cover_large.jpg">
</div>

<!-- Titre + Bouton -->
<div class="d-flex w-75 mx-auto justify-content-between align-items-center my-5">
  <h1 class="mb-0">My Lists</h1>
  <%= link_to new_list_path do %>
    <button type="button" class="btn btn-outline-dark">Add</button>
  <% end %>
</div>

<!-- Cartes des listes -->
<div class="container w-75 mx-auto">
  <div class="row g-4 justify-content-start"> <!-- Alignement des cartes à gauche -->
    <% @lists.each do |list| %>
      <div class="col-lg-4 col-md-6 d-flex"> <!-- Toujours 3 par ligne sur grand écran -->
        <div class="card shadow-lg w-100" style="max-width: 300px; height: 150px;">
          <!-- Contenu -->
          <div class="card-body d-flex align-items-center justify-content-center">
            <%= link_to list_path(list), class: "text-decoration-none" do %>
              <h5 class="card-title mb-0 fw-bold text-dark text-center"><%= list.name %></h5>
            <% end %>
          </div>

          <!-- Bandeau en bas -->
          <div class="card-footer d-flex justify-content-between align-items-center bg-light">
            <!-- Pastille alignée à gauche -->
            <span class="badge text-bg-primary rounded-pill"><%= list.movies.count %></span>

            <!-- Bouton de suppression aligné à droite -->
            <%= link_to "/lists/#{list.id}", data: { turbo_method: :delete, turbo_confirm: "Es-tu sûr ?" }, class: "ms-auto" do %>
              <i class="fa-solid fa-trash text-danger"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
